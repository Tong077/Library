@model Library.Models.BorrowandBorrowDetail
@{
    ViewData["Title"] = "BorrowDetail";
}

<div class="card">
    <div class="card-header">
        <h4 class="title float-left">Update Borrow</h4>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="BorrowDetial" method="post">
            <input asp-for="Borrow.BorrowId" type="hidden" />

            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.CustomerId" class="control-label">Customer Name</label>
                    <select asp-for="Borrow.CustomerId" class="custom-select"
                            asp-items="@ViewBag.Customer">
                        <option> Please Select Customer Name</option>

                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.LibrarianId" class="control-label">Librarian Name</label>
                    <select asp-for="Borrow.LibrarianId" class="custom-select"
                            asp-items="@ViewBag.librarians">
                        <option> Please Select Librarian Name</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.BorrowDate" class="control-label">Borrow Date</label>
                    <input asp-for="Borrow.BorrowDate" class="form-control" />
                    <span asp-validation-for="Borrow.BorrowDate" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.Duedate" class="control-label">Due Date</label>
                    <input asp-for="Borrow.Duedate" class="form-control" />
                    <span asp-validation-for="Borrow.Duedate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.BorrowCode" class="control-label">Borrow Code</label>
                    <input asp-for="Borrow.BorrowCode" class="form-control" />
                    <span asp-validation-for="Borrow.BorrowCode" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.Memo" class="control-label">Memo</label>
                    <input asp-for="Borrow.Memo" class="form-control" />
                    <span asp-validation-for="Borrow.Memo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.Depositamount" class="control-label">Deposit Amount</label>
                    <input asp-for="Borrow.Depositamount" class="form-control" />
                    <span asp-validation-for="Borrow.Depositamount" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Borrow.FineAmount" class="control-label">Fine Amount</label>
                    <input asp-for="Borrow.FineAmount" class="form-control" />
                    <span asp-validation-for="Borrow.FineAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group form-check">
                <input asp-for="Borrow.IsHidden" class="form-check-input" />
                <label class="form-check-label" asp-for="Borrow.IsHidden">Is Hidden</label>
            </div>

            <input asp-for="BorrowDetail.BorrowDetailId" type="hidden" />
            <input asp-for="BorrowDetail.BorrowId" type="hidden" />

            <div class="row">
              
                <div class="form-group col-sm-6">
                    <label asp-for="BorrowDetail.Note" class="control-label">Note</label>
                    <input asp-for="BorrowDetail.Note" class="form-control" />
                    <span asp-validation-for="BorrowDetail.Note" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="BorrowDetail.ReturnDate" class="control-label">Return Date</label>
                    <input asp-for="BorrowDetail.ReturnDate" class="form-control" />
                    <span asp-validation-for="BorrowDetail.ReturnDate" class="text-danger"></span>
                </div>
            </div>

           


            <div class="form-group">
                <label asp-for="BorrowDetail.BookId" class="control-label">Book Name</label>
                <select asp-for="BorrowDetail.BookId" asp-items="@ViewBag.Book" class="custom-select">
                    <option> Please Select Book Name</option>
                </select>

            </div>

            <div class="form-group form-check">
                <input asp-for="BorrowDetail.IsReturn" class="form-check-input" />
                <label class="form-check-label" asp-for="BorrowDetail.IsReturn">Is Return</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
