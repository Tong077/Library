@model Library.Models.CustomerType
@{
    ViewData["Title"] = "CustomerType";
}

<div class="card">
    <div class="card-header">
        <h4 class="title float-left">Add CustomerType</h4>
    </div>
    <div class="card-header">


        <form asp-action="Create" asp-controller="CustomerType" method="post">
            <div class="form-group">
                <label asp-for="CustomerTypeName" class="control-label"></label>
                <input asp-for="CustomerTypeName" type="text" placeholder="CustomerTypeName" class="form-control" />
                <span asp-validation-for="CustomerTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm float-lg-right ml-2">Add New</button>
                <a class="btn btn-danger btn-sm float-lg-right" asp-action="Index">Cancel</a>
            </div>
        </form>


    </div>
</div>

