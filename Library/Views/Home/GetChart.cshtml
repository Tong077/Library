


<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body pb-0 d-flex justify-content-between">
                            <div>
                                <h4 class="mb-1">Product Sales</h4>
                                <p>Total Earnings of the Month</p>
                                <h3 class="m-0">$ 12,555</h3>
                            </div>
                            <div>
                                <ul>
                                    <li class="d-inline-block mr-3"><a class="text-dark" href="#">Day</a></li>
                                    <li class="d-inline-block mr-3"><a class="text-dark" href="#">Week</a></li>
                                    <li class="d-inline-block"><a class="text-dark" href="#">Month</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="chart-wrapper ml-3" style="width: 1120px; height: 350px;">
                            <canvas id="chart_widget_2"></canvas>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="ml-2 w-100 mr-2 ">
                                    <h6>Book @ViewData["BookCount"]</h6>

                                </div>
                                <div class="ml-2 w-100 mr-2">
                                    <h6>Customer @ViewData["CustomerCount"] </h6>

                                </div>
                                <div class="ml-2 w-100 mr-2">
                                    <h6>Borrow @ViewData["Borrow"]</h6>

                                </div>
                                <div class="ml-2 w-100 mr-2">
                                    <h6>IsReturn @ViewData["bookreturn"]</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        fetch('/Home/GetChartData')
            .then(response => response.json())
            .then(data => {
                var ctx = document.getElementById('chart_widget_2').getContext('2d');
                var chart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.labels,
                        datasets: data.datasets
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            })
            .catch(error => console.error('Error fetching chart data:', error));
    });
</script>

