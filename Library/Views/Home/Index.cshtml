@{
    ViewData["Title"] = "Home";

}

<section class="content">

    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-4 col-4">
                <!-- small box -->
                <div class="small-box  bg-info">
                    <div class="inner">
                        <h3> @ViewData["BookCount"]<i class="fa-solid fa-book float-lg-right"></i></h3>

                        <p>Total Book</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="Book" asp-action="Index" class="small-box-footer">Add New Book <i class="fas fa-arrow-circle-right"></i></a>
                </div>

            </div>

            <!-- ./col -->
            <div class="col-lg-4 col-4">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>
                            @ViewData["BorrowCount"]<i class="fas fa-handshake float-lg-right"></i>
                        </h3>
                        <p> All Borrow </p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a asp-controller="Borrow" asp-action="Index" class="small-box-footer"> Borrow <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-4 col-4">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner ">
                        <h3>@ViewData["IsReturn"]</h3>

                        <p class="">Total Return</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="BorrowDetial" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <!-- ./col -->
        </div>
    </div>
</section>

<partial name="AreaChate"/>







